                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#DADADA" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="Branch Full Name"
                            android:textColor="#AEAEAE"
                            android:textSize="14sp"
                            app:fontFamily="@font/roboto_regular" />

                        <TextView
                            android:id="@+id/tv_branch_full_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:textColor="#666666"
                            android:textSize="18sp"
                            app:fontFamily="@font/roboto_regular"
                            tools:text="branch full name" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#DADADA" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="Quotas"
                            android:textColor="#AEAEAE"
                            android:textSize="14sp"
                            app:fontFamily="@font/roboto_regular" />

                        <ListView
                            android:id="@+id/quotas_list"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:divider="#DADADA"
                            android:dividerHeight="1dp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#DADADA" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="Allocation"
                            android:textColor="#AEAEAE"
                            android:textSize="14sp"
                            app:fontFamily="@font/roboto_regular" />

                        <ListView
                            android:id="@+id/allocations_list"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:divider="#DADADA"
                            android:dividerHeight="1dp" />

                    </LinearLayout>
                </LinearLayout>
            </ScrollView>

            <View
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/nestedScroll"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="#DADADA" />

            <LinearLayout
                android:id="@+id/cl_bottom"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/view2"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:weightSum="3">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentBottom="true"
                        android:padding="2dp"
                        android:src="@drawable/ic_location_gray" />

                    <TextView
                        android:id="@+id/tv_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="5dp"
                        android:layout_toEndOf="@id/iv_location"
                        android:gravity="center"
                        android:textColor="#BCBCBC"
                        android:textSize="16sp"
                        app:fontFamily="@font/roboto_bold"
                        tools:text="1.2 Km" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_reject"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentBottom="true"
                    android:layout_toEndOf="@id/tv_location"
                    android:layout_weight="0.7"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Reject"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    app:fontFamily="@font/roboto_regular" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_toStartOf="@id/iv_down_arrow"
                    android:layout_weight="1.3">

                    <TextView
                        android:id="@+id/tv_accept"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_green"
                        android:gravity="center"
                        android:padding="7dp"
                        android:text="Apply"
                        android:textAlignment="center"
                        android:textColor="#BDD82F"
                        android:textSize="18sp"
                        android:visibility="visible"
                        app:fontFamily="@font/roboto_bold" />

                    <LinearLayout
                        android:id="@+id/ll_start_job"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:background="@drawable/border_blue"
                        android:orientation="horizontal"
                        android:padding="2dp"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/iv_language"
                            android:layout_width="30dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_start_job" />

                        <TextView
                            android:id="@+id/tv_start_job"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toStartOf="@id/iv_down_arrow"
                            android:fontFamily="@font/roboto_bold"
                            android:padding="7dp"
                            android:text="Start Job"
                            android:textColor="@color/dark_blue"
                            android:textSize="14sp" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>


</RelativeLayout>