<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="7dp"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:layout_marginBottom="10dp">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Filter settings"
                android:textColor="#000000"
                android:textSize="24sp"
                app:fontFamily="@font/roboto_bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/ll_chooseClient"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/black_corners_1dp"
                android:gravity="start"
                android:orientation="horizontal"
                android:padding="1dp"
                app:layout_constraintTop_toBottomOf="@id/tv_title">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardLanguage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="5dp">

                    <Spinner
                        android:id="@+id/jobtypelist"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/white"
                        android:drawSelectorOnTop="true"
                        android:entries="@array/job_filter_job_list"
                        android:paddingLeft="5dp" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical|end"
                        android:padding="12dp"
                        android:scaleType="center"
                        android:src="@drawable/ic_down_arrow_blue" />

                </androidx.cardview.widget.CardView>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/ll_chooseJobType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/black_corners_1dp"
                android:gravity="start"
                android:orientation="horizontal"
                android:padding="1dp"
                app:layout_constraintTop_toBottomOf="@id/ll_chooseClient">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardJobType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="5dp">

                    <androidx.appcompat.widget.AppCompatSpinner
                        android:id="@+id/tvSpinnerJobType"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="start"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="30dp"
                        android:backgroundTint="@color/white"
                        android:textColor="@color/black"
                        app:fontFamily="@font/roboto_regular" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical|end"
                        android:padding="12dp"
                        android:scaleType="center"
                        android:src="@drawable/ic_down_arrow_blue" />

                </androidx.cardview.widget.CardView>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/ll_chooseRegion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/black_corners_1dp"
                android:gravity="start"
                android:orientation="horizontal"
                android:padding="1dp"
                app:layout_constraintTop_toBottomOf="@id/ll_chooseJobType">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardRegion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="5dp">

                    <Spinner
                        android:id="@+id/bregionlist"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/white"
                        android:drawSelectorOnTop="true"
                        android:entries="@array/job_filter_region_list" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical|end"
                        android:padding="12dp"
                        android:scaleType="center"
                        android:src="@drawable/ic_down_arrow_blue" />

                </androidx.cardview.widget.CardView>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/ll_Branch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/black_corners_1dp"
                android:gravity="start"
                android:orientation="horizontal"
                android:padding="1dp"
                app:layout_constraintTop_toBottomOf="@id/ll_chooseRegion">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardBranch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="5dp">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="Branch"
                        android:textColor="#AEAEAE"
                        android:textSize="16sp" />

                </androidx.cardview.widget.CardView>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/ll_chooseFrom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/black_corners_1dp"
                android:gravity="start"
                android:orientation="horizontal"
                android:padding="1dp"
                app:layout_constraintTop_toBottomOf="@id/ll_Branch">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardFrom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="5dp">

                    <androidx.appcompat.widget.AppCompatSpinner
                        android:id="@+id/tvSpinnerFrom"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="start"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="30dp"
                        android:backgroundTint="@color/white"
                        android:textColor="@color/black"
                        app:fontFamily="@font/roboto_regular" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical|end"
                        android:padding="12dp"
                        android:scaleType="center"
                        android:src="@drawable/ic_down_arrow_blue" />

                </androidx.cardview.widget.CardView>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/ll_chooseTo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/black_corners_1dp"
                android:gravity="start"
                android:orientation="horizontal"
                android:padding="1dp"
                app:layout_constraintTop_toBottomOf="@id/ll_chooseFrom">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardTo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="5dp">

                    <androidx.appcompat.widget.AppCompatSpinner
                        android:id="@+id/tvSpinnerTo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="start"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="30dp"
                        android:backgroundTint="@color/white"
                        android:textColor="@color/black"
                        app:fontFamily="@font/roboto_regular" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical|end"
                        android:padding="12dp"
                        android:scaleType="center"
                        android:src="@drawable/ic_down_arrow_blue" />

                </androidx.cardview.widget.CardView>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnSave"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="19dp"
                android:background="@drawable/rounded_button"
                android:gravity="center"
                android:padding="12dp"
                android:text=" Display"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:fontFamily="@font/roboto_bold"
                app:layout_constraintTop_toBottomOf="@+id/ll_chooseTo" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


    <TableLayout
        android:id="@+id/jobfilter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="40dp" >

        <TableRow
            android:layout_margin="10dip"
            android:gravity="center" >

            <TextView
                android:id="@+id/Label_jobtypelist"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:text="@string/job_filter_choose_job_type_lbl"
                android:textColor="#000000"
                android:textSize="12dp" />

            <Spinner
                android:id="@+id/jobtypelist"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:drawSelectorOnTop="true"
                android:entries="@array/job_filter_job_list"
                android:paddingLeft="5dp" />
        </TableRow>

        <TableRow
            android:layout_margin="10dip"
            android:gravity="center" >

            <TextView
                android:id="@+id/Label_regionlist"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:text="@string/job_filter_choose_city_lbl"
                android:textColor="#000000"
                android:textSize="12dp" />

            <Spinner
                android:id="@+id/regionlist"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:drawSelectorOnTop="true"
                android:entries="@array/job_filter_region_list" />
        </TableRow>

        <TableRow
            android:layout_margin="10dip"
            android:gravity="center" >

            <TextView
                android:id="@+id/Label_bcodelist"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:text="@string/jd_branchname"
                android:textColor="#000000"
                android:textSize="12dp" />

            <Spinner
                android:id="@+id/bcodelist"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:drawSelectorOnTop="true"
                android:entries="@array/job_filter_region_list" />
        </TableRow>

        <TableRow
            android:layout_margin="10dip"
            android:gravity="center" >

            <TextView
                android:id="@+id/Label_bproplist"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:text="@string/jd_branchprops"
                android:textColor="#000000"
                android:textSize="12dp" />

            <Spinner
                android:id="@+id/bproplist"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:drawSelectorOnTop="true"
                android:entries="@array/job_filter_region_list" />
        </TableRow>

        <TableRow
            android:layout_margin="10dip"
            android:gravity="center" >

            <TextView
                android:id="@+id/Label_projectlist"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:text="@string/jd_projects"
                android:textColor="#000000"
                android:textSize="12dp" />

            <Spinner
                android:id="@+id/bprojectslist"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:drawSelectorOnTop="true"
                android:entries="@array/job_filter_region_list" />
        </TableRow>

        <TableRow
            android:layout_margin="10dip"
            android:gravity="center" >

            <TextView
                android:id="@+id/calandertitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_span="2"
                android:text="@string/job_filter_date_range_lbl"
                android:textColor="#000000"
                android:textSize="12dp"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:layout_margin="10dip"
            android:gravity="center" >

            <TextView
                android:id="@+id/Label_sdate"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:text="@string/job_filter_start_date_lbl"
                android:textColor="#000000"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/startdate"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="31/07/2012"
                android:textColor="#000000"
                android:textSize="12dp" />
        </TableRow>

        <TableRow
            android:layout_margin="10dip"
            android:gravity="center" >

            <TextView
                android:id="@+id/Label_enddate"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:text="@string/job_filter_end_date_lbl"
                android:textColor="#000000"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/enddate"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="31/07/2012"
                android:textColor="#000000"
                android:textSize="12dp" />
        </TableRow>

        <TableRow
            android:layout_margin="10dip"
            android:gravity="right" >

            <ImageView
                android:id="@+id/dialog_save"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/search" />
        </TableRow>
    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>