<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/settings_bg"
    tools:context=".NewSettingsActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/settings_bg"
            android:paddingBottom="30dp"
            tools:context=".NewSettingsActivity">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvSettings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="86dp"
                android:layout_marginEnd="25dp"
                android:text="@string/setting"
                android:textColor="@color/white"
                android:textSize="28sp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="12dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvSettings">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="22dp"
                    android:paddingTop="28dp"
                    android:paddingEnd="22dp"
                    android:paddingBottom="32dp">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/settings_language_lbl"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        app:fontFamily="@font/roboto_regular" />

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/llLanguage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/black_corners_1dp"
                        android:gravity="start"
                        android:orientation="horizontal"
                        android:padding="1dp">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardLanguage"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardBackgroundColor="@color/white"
                            app:cardCornerRadius="5dp">

                            <androidx.appcompat.widget.AppCompatSpinner
                                android:id="@+id/tvSpinnerLanguage"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="start"
                                android:layout_marginEnd="30dp"
                                android:textColor="@color/black"
                                android:layout_marginStart="15dp"
                                android:backgroundTint="@color/white"
                                app:fontFamily="@font/roboto_regular" />

                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_vertical|end"
                                android:padding="10dp"
                                android:scaleType="center"
                                android:src="@drawable/down_arrow"
                                app:tint="@color/light_blue" />

                        </androidx.cardview.widget.CardView>

                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="@string/settings_themes_lbl"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        app:fontFamily="@font/roboto_regular" />

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/llTheme"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"

                        android:background="@drawable/black_corners_1dp"
                        android:gravity="start"
                        android:orientation="horizontal"
                        android:padding="1dp">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardTheme"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardBackgroundColor="@color/white"
                            app:cardCornerRadius="5dp">

                            <androidx.appcompat.widget.AppCompatSpinner
                                android:id="@+id/tvSpinnerTheme"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="start"
                                android:layout_marginStart="15dp"
                                android:text="@string/find_horses_near_me"
                                android:textColor="@color/black"
                                android:textSize="14sp"
                                android:backgroundTint="@color/white"
                                app:fontFamily="@font/roboto_regular" />

                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_vertical|end"
                                android:padding="10dp"
                                android:scaleType="center"
                                android:src="@drawable/down_arrow"
                                app:tint="@color/light_blue" />

                        </androidx.cardview.widget.CardView>

                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="@string/image_resizing"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        app:fontFamily="@font/roboto_regular" />

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/llImageResizing"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/black_corners_1dp"
                        android:gravity="start"
                        android:orientation="horizontal"
                        android:padding="1dp">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardImageResizing"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardBackgroundColor="@color/white"
                            app:cardCornerRadius="5dp">

                            <androidx.appcompat.widget.AppCompatSpinner                                android:id="@+id/tvSpinnerImageResizing"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="start"
                                android:layout_marginStart="15dp"
                                android:text="@string/find_horses_near_me"
                                android:textColor="@color/black"
                                android:textSize="14sp"
                                android:backgroundTint="@color/white"
                                app:fontFamily="@font/roboto_regular" />

                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_vertical|end"
                                android:padding="10dp"
                                android:scaleType="center"
                                android:src="@drawable/down_arrow"
                                app:tint="@color/light_blue" />

                        </androidx.cardview.widget.CardView>

                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="@string/branch_sorting"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        app:fontFamily="@font/roboto_regular" />

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/llBranchSorting"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/black_corners_1dp"
                        android:gravity="start"
                        android:orientation="horizontal"
                        android:padding="1dp">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardBranchSorting"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardBackgroundColor="@color/white"
                            app:cardCornerRadius="5dp">

                            <androidx.appcompat.widget.AppCompatSpinner
                                android:id="@+id/tvSpinnerBranchSorting"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="start"
                                android:layout_marginStart="15dp"
                                android:text="@string/find_horses_near_me"
                                android:textColor="@color/black"
                                android:textSize="14sp"
                                android:backgroundTint="@color/white"
                                app:fontFamily="@font/roboto_regular" />

                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_vertical|end"
                                android:padding="10dp"
                                android:scaleType="center"
                                android:src="@drawable/down_arrow"
                                app:tint="@color/light_blue" />

                        </androidx.cardview.widget.CardView>

                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="@string/geo_tracker_settings"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        app:fontFamily="@font/roboto_regular" />

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="10dp">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="15dp"
                            android:layout_weight="1"
                            android:text="@string/find_jobs_near_me"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            app:fontFamily="@font/roboto_regular" />

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:id="@+id/toggleJobs"
                            android:layout_width="54dp"
                            android:layout_height="27dp"
                            android:background="@drawable/gray_corners"
                            android:layoutDirection="ltr"
                            android:orientation="horizontal">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_margin="2dp"
                                app:srcCompat="@drawable/white_owal" />
                        </androidx.appcompat.widget.LinearLayoutCompat>

                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#C4C4C4" />

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="15dp"
                            android:layout_weight="1"
                            android:text="@string/find_horses_near_me"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            app:fontFamily="@font/roboto_regular" />
                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:id="@+id/toggleHorses"
                            android:layout_width="54dp"
                            android:layout_height="27dp"
                            android:background="@drawable/gray_corners"
                            android:layoutDirection="ltr"
                            android:orientation="horizontal">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_margin="2dp"
                                app:srcCompat="@drawable/white_owal" />
                        </androidx.appcompat.widget.LinearLayoutCompat>

                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#C4C4C4" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnSave"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="19dp"
                        android:background="@drawable/rounded_button"
                        android:gravity="center"
                        android:padding="12dp"
                        android:textColor="@color/white"
                        android:text="Save &amp; Continue" />
                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>